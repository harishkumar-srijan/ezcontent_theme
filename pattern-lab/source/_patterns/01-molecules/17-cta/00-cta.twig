<div class="cta_wrapper" style="background-color:{{ field_background_color }}">
  <div class="cta__content">
    <div class="cta__title">
      {% include '@atoms/02-text/00-headings.twig' with {
        heading_level: 2,
        heading: field_title
      } %}
    </div>
     <div class="cta__sub--title">
      {% include '@atoms/02-text/01-paragraph.twig' with {
        paragraph_content: field_body
      } %}
    </div>
  </div>
  <div class="cta__action">
    {% include '@atoms/06-buttons/00-buttons.twig' with {
      button_content: field_link,
      class: button
    } %}
  </div>
</div>
